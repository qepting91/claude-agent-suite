{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Evaluate this bash command for safety. Check for: (1) destructive operations like rm -rf, git reset --hard, (2) credential exposure, (3) network requests to unknown hosts. Command: $TOOL_INPUT. Return JSON: {\"decision\": \"allow\" or \"block\", \"reason\": \"explanation\"}",
            "timeout": 15,
            "model": "haiku"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File modified: check for formatting'",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Session started'",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ]
  },
  "model": "sonnet"
}
